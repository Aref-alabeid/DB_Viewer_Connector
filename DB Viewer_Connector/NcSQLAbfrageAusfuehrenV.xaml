<Window x:Class="DB_Viewer_Connector.NcSQLAbfrageAusfuehrenV"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DB_Viewer_Connector"
        mc:Ignorable="d"
        Title="SQL Abfrage ausfuehren" Height="414" Width="800" Icon="/PayJoeLogo2.png">
    <Grid>
        <Grid Height="378" Margin="10,0,10,0" VerticalAlignment="Center" Background="{DynamicResource {x:Static SystemColors.ControlLightBrushKey}}">
            <DataGrid Name="dBData" ItemsSource="{Binding DBData}" Margin="10,39,10,175"/>
            <TextBox Text="{Binding Path= SQLAbfrage}" Height="86" Margin="10,208,10,0"  TextWrapping="Wrap" VerticalAlignment="Top"/>
            <Button Content="SQL-Abfrage ausführen" Command="{Binding SQLAbfrageAusfuehrenCommand}"  HorizontalAlignment="Left" Margin="10,314,0,36" Width="151"/>
            <Button Content="Schließen" HorizontalAlignment="Left" Margin="175,314,0,36" Width="151" Click="Button_Click" />
            <Label x:Name="lblFirma" Content="Mandant auswählen:" HorizontalAlignment="Left" Margin="10,5,0,344" Width="124"/>
            <ComboBox x:Name="cbFirma" ItemsSource="{Binding Companies}" SelectedItem="{Binding SelectedCompany}" Margin="134,8,455,346" />
        </Grid>

    </Grid>

</Window>
